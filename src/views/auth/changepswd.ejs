<%- include('../partials/basicheader2') %>
<div class="container">
  <div class="row p-4">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-header login-header">
          <h2>Cambio de contraseña</h2>
        </div>
        <div class="card-boody p-4">
          <form action="/changepswd/<%= id %>" method="POST">
            <div class="form-group p-1">
              <p style="color:red"><%= message %></p>
            </div>
            <div class="form-group p-1">
              <label for="password">Contraseña actual:</label>
              <input type="password" name="password" id="password" placeholder="Ingrese su contraseña actual" class="form-control" autofocus required>
            </div>
            <div class="form-group p-1">
              <label for="newpassword1">Nueva contraseña:</label>
              <input type="password" name="newpassword1" id="newpassword1" placeholder="Ingrese su nueva contraseña" class="form-control" required>
            </div>
            <div class="form-group p-1">
              <!-- <label for="newpassword2">Nueva contraseña:</label> -->
              <input type="password" name="newpassword2" id="newpassword2" placeholder="Reingrese su nueva contraseña" class="form-control" required>
            </div>
            <div class="form-group p-1 text-center">
              <a href="/periodo" type="button" class="btn btn-danger">Cancelar</a>
              <button type="submit" class="btn btn-success">Guardar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/basicfooter2') %>
