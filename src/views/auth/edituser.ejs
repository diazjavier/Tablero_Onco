<%- include('../partials/basicheader2') %>
<div class="container">
  <div class="row p-4">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header login-header">
          <h2>Usuario: <b><%= usuario.nombre %></b></h2>
        </div>
        <div class="card-boody p-4">
          <form action="/edituser/<%= usuario.idUser %>" method="POST">
            <div class="form-group p-1">
              <p style="color:red"><%= message %></p>
            </div>
            <div class="form-group p-1">
              <label for="nombre">Nombre completo:</label>
              <input type="text" name="nombre" value="<%= usuario.nombre %>" id="nombre" placeholder="Ingrese el nombre completo" class="form-control" autofocus>
            </div>
            <div class="form-group p-1">
              <label for="usuario">Nombre de usuario:</label>
              <input type="text" name="usuario" value="<%= usuario.usuario %>" id="usuario" placeholder="Ingrese el usuario" class="form-control">
            </div>
            <div class="form-group p-1">
              <label for="email">Correo electr칩nico:</label>
              <input type="email" name="email" value="<%= usuario.email %>" id="email" placeholder="Ingrese el correo electr칩nico" class="form-control">
            </div>
            <div class="form-group p-1">
              <input type="checkbox" name="idRol" value="true"
              <% if(usuario.rol == 2) {%>
                checked>
              <% } else { %>
                unchecked>
              <% } %>
              <label for="idRol"> Administrador</label>
              <br>
              <input type="checkbox" name="activo" value=true
              <% if(usuario.activo == 1) {%>
                checked>
              <% } else { %>
                unchecked>
              <% } %>
              <label for="activo"> Activo</label>

            </div>
            <!-- <div class="form-group p-1">
              <label for="password">Contrase침a:</label>
              <input type="password" name="password" id="password" placeholder="Ingrese la contrase침a" class="form-control">
            </div> -->
            <div class="form-group p-1 text-center">
              <a href="/usuarios" type="button" class="btn btn-danger">Cancelar</a>
              <button type="submit" class="btn btn-success">Guardar cambios</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
