<%- include('../partials/noheader') %>
<div class="container">
  <div class="row p-4">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header login-header">
          <h2>Acceso</h2>
        </div>
        <div class="card-boody p-4">
          <form action="/signin" method="POST">
            <div class="form-group p-1">
              <p style="color:red">
                <%= noFind %>
              </p>
            </div>
            <div class="form-group p-1">
              <label for="usuario">Nombre de usuario:</label>
              <input type="text" name="usuario" id="usuario" placeholder="Ingrese el usuario" class="form-control" required>
            </div>
            <div class="form-group p-1">
              <label for="password">Contraseña:</label>
              <input type="password" name="password" id="password" placeholder="Ingrese la contraseña" class="form-control" required>
            </div>
            <div class="form-group p-1">
              <button type="submit" class="btn btn-info btn-block">Ingresar</button>
            </div>
          </form>
          <div class="container p-4 text-center">
            <a href="/senduser">Olvidó sus credenciales de acceso?</a>
            <!-- <br>
            <a href="/sendpasswd">Olvidó su contraseña?</a> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/basicfooter') %>
